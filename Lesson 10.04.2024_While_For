// public class Main {
//   public static void main(String[] args) {

//     System.out.println("Hello world!");

//     int i = 1; //First NUMBER IS ALWAYS 1
//     boolean isEven = false; // First NUMBER IS ALWAYS ODD
//     //Count from 0 to 10
