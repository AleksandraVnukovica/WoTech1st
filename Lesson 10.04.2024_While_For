// public class Main {
//   public static void main(String[] args) {
//     int i = 1;
//     while (i <= 10) {
//       // Start action

//       System.out.println(i);
//       // End action
//       i = i + 1;
//     }
//   }
// }

// The same action in different code:
public class Main {
  public static void main(String[] args) {
  // int i = 1 Defined at the start
  // i <= 10 A condition to check before starting a loop
  // i = i + 1 An action we do at the end of each loop
    for (int i = 1; i <= 10; i = i + 1) {
      System.out.println(i);
    }
  }
}
